<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.egrishin.appmarketingtips.CommonLifecycle">

    <ImageView
        android:id="@+id/photo_develop"
        android:layout_width="96sp"
        android:layout_height="96sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/develop"/>

    <ImageView
        android:id="@+id/photo_launch"
        android:layout_width="96sp"
        android:layout_height="96sp"
        android:layout_below="@id/photo_develop"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:scaleType="centerCrop"
        android:src="@drawable/launch"/>

    <ImageView
        android:id="@+id/photo_engage"
        android:layout_width="96sp"
        android:layout_height="96sp"
        android:layout_below="@id/photo_launch"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:scaleType="centerCrop"
        android:src="@drawable/engage"/>

    <ImageView
        android:id="@+id/photo_grow"
        android:layout_width="96sp"
        android:layout_height="96sp"
        android:layout_toRightOf="@id/photo_engage"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:scaleType="centerCrop"
        android:rotation=""
        android:src="@drawable/grow"/>

</RelativeLayout>
